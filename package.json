{
  "name": "orchestration-workflows",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build.watch": "tsc --build --watch",
    "lint": "eslint \"src/**/*.ts\" ",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "start": "npm run build && node dist/worker.js",
    "start.watch": "nodemon src/worker.ts",
    "workflow:advanced-signing": "ts-node src/workflows/digital-fulfilment/client.ts",
    "workflow:testkit-reset-activation": "ts-node src/workflows/diagnostics/client.ts",
    "test": "jest --coverage --runInBand"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.37.0",
    "@opentelemetry/propagator-jaeger": "^1.13.0",
    "@opentelemetry/sdk-node": "^0.39.1",
    "@temporalio/activity": "^1.0.0",
    "@temporalio/client": "^1.0.0",
    "@temporalio/interceptors-opentelemetry": "^1.7.4",
    "@temporalio/worker": "^1.0.0",
    "@temporalio/workflow": "^1.0.0",
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "nanoid": "3.x"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@temporalio/nyc-test-coverage": "^1.4.4",
    "@temporalio/testing": "^1.4.4",
    "@tsconfig/node16": "^1.0.0",
    "@types/jest": "^29.2.2",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dependency-cruiser": "^12.10.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.12",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.8.1",
    "tsarch": "^5.3.0",
    "tsc-alias": "^1.7.1",
    "typescript": "^4.4.2"
  }
}
